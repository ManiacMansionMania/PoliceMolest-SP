****************************/
function hBuecherOben_AnyClick()
{
	if (any_click_move(177,  138, eDirUp))
	{
		if (UsedAction(eActWalkTo))
		{
		}
		else if (UsedAction(eActLookAt))
		{
			Wait(5);
			player.Say("In der obersten Bücherreihe sind ausländische Gesetzestestexte. Darunter auch das deutsche Grundgesetz.");
			
			if ( player.IsJudge() )
			{
				Wait(10);
				player.FaceDirection(eDirDown);
				Wait(10);
				player.Say("Sie dienen mir als Referenz, wenn unsere Gesetzgebung mal nicht präzise genug ist, oder es um einen Präzedenzfall geht.");
			}
		}
		else if (UsedAction(eActPickUp))
		{
			Wait(5);
			player.SayIfIsJudge("Ich bearbeite gerade keinen Fall.");
			player.SayIfIsNotJudge("Ich kann mit Gesetzestexten nichts anfangen.");
		}
		else if (UsedAction(eActUse))
		{
			Wait(5);
			player.Say("Die brauche ich nicht.");
		}
		else if (UsedAction(eActOpen))
		{
			Wait(5);
			player.Say("Dazu müsste ich eines aus dem Regal nehmen.");
		}
		else if (UsedAction(eActClose))
		{
			Wait(5);
			player.Say("Die stehen alle geschlossen im Regal.");
		}
		else if (UsedAction(eActPull) || UsedAction(eActPush))
		{
			Wait(5);
			player.Say("Später vielleicht.");
		}
		else if (UsedAction(eActUseInventory))
		{
			Wait(5);
			player.Say("Das will ich nicht zwischen den Büchern verstecken.");
		}
		else Unhandled();
	}
}

