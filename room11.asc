}


/****************************
*   Tür-Hotspot-Funktionen
****************************/
function hTuerFrauen_AnyClick()
{
	if ( Door[eDoorNumDamentoilette].Click() == 0 ) Unhandled();
}

function hTuerMaenner_AnyClick()
{
	if ( Door[eDoorNumHerrentoilette].Click() == 0 ) Unhandled();
}


