// Additional functionality for Police Molest

bool IsJudge(this Character*)
{
	bool	b_return	= false;
	
	if ( (this == cGrim) )
	{
		b_return = true;
	}
	
	return b_return;
}

bool SayIfIsJudge(this Character*, String message)
{
	if ( player.IsJudge() && player == this )
	{
		this.Say(message);
		return true;
	}
	else
	{
		return false;
	}
}

bool SayIfIsNotJudge(this Character*, String message)
{
	if ( !player.IsJudge() && player != this )
	{
		this.Say(message);
		return true;
	}
	else
	{
		return false;
	}
}

