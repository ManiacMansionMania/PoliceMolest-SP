function hFensterLinks_AnyClick()
{
	if (any_click_move(54, 111, eDirectionUp))
	{
		if (UsedAction(eActWalkTo))
		{
		//	Wait(5);
		}
		else if (UsedAction(eActLookAt))
		{
			Wait(5);
			player.Say("Ich sehe die Küche.");
		}
		else if (UsedAction(eActPickUp))
		{
			Wait(5);
			player.Say("Geht nicht, will auch nicht.");
		}
		else if (UsedAction(eActUse))
		{
			Wait(5);
			player.Say("Ich könnte mich in die Küche reinschleichen.");
			player.Say("Aber so dämlich bin ich nicht.");
		}
		else if (UsedAction(eActOpen))
		{
			Wait(5);
			player.Say("Von hier aus kann ich das Fenster nicht öffnen.");
		}
		else if (UsedAction(eActClose))
		{
			Wait(5);
			player.Say("Nur von der anderen Seite verschließbar.");
		}
		else if (UsedAction(eActPull) || UsedAction(eActPush))
		{
			Wait(5);
			player.Say("Ich will das Fenster nicht schmutzig oder kaputt machen.");
		}
		else Unhandled();
	}
}

