			Wait(5);
			player.Say("Unser Briefkasten.");
		}
		else if (UsedAction(eActPickUp))
		{
			Wait(5);
			player.Say("Ich hab 'nen Handy.");
		}
		else if (UsedAction(eActUse))
		{
			Wait(5);
			player.Say("Der wird schon verwendet.");
		}
		else if (UsedAction(eActOpen))
		{
			Wait(5);
			player.Say("Ich hab schon den Briefkasten heute geleert.");
		}
		else if (UsedAction(eActClose))
		{
			Wait(5);
			player.Say("Ich bin doch nicht blöd.");
			Wait(10);
			player.FaceDirection(eDirectionLeft);
			Wait(20);
			player.FaceDirection(eDirectionRight);
			Wait(20);
			player.FaceDirection(eDirectionDown);
			player.Say("Und ich dachte schon, dass ich wieder etwas ausgelöst hätte, wie: 'La, la, la, lass dich nicht verarschen!'");
			Wait(30);
			player.Say("Moment, das hab ich grad'.");
			player.Say("So ein Mist!");
		}
		else if (UsedAction(eActPull) || UsedAction(eActPush))
		{
			Wait(5);
			player.Say("Ich will keine Briefe versenden.");
			player.Say("Dafür gibt es ja E-Mails, SMS, MMS und Foren, gell?");
		}
		else Unhandled();
	}
}

